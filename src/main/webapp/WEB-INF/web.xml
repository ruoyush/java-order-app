<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>EmployeeController</servlet-name>
        <servlet-class>com.app.web.EmployeeController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LoginUtil</servlet-name>
        <servlet-class>com.app.web.LoginUtil</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LogoutUtil</servlet-name>
        <servlet-class>com.app.web.LogoutUtil</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>com.app.web.OrderController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>EmployeeController</servlet-name>
        <url-pattern>/admin/employee</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MenuController</servlet-name>
        <servlet-class>com.app.web.MenuController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MenuController</servlet-name>
        <url-pattern>/admin/menu</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LoginUtil</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LogoutUtil</servlet-name>
        <url-pattern>/admin/logout</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/admin/order</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

</web-app>
